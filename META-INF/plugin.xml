<idea-plugin version="2">
    <name>CVSToolBox</name>
    <description>
        Expands CVS integration by providing additional operations.
    </description>
    <version>1.01</version>
    <vendor email="zieluuuu@gmail.com">Łukasz Zieliński</vendor>
     <idea-version since-build="95.627" until-build="95.627"/>
    <!-- dependencies -->
    <depends>CVS</depends>
    <category>VCS Integration</category>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
        <component>
            <implementation-class>org.cvstoolbox.multitag.MultiTagConfiguration</implementation-class>
        </component>
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <action id="CVSToolBox.CreateMultiTag" class="org.cvstoolbox.multitag.MultiTagAction"
                text="Create Multiple Tags..." icon="/org/cvstoolbox/resources/tag_green.png"
                description="Create multiple tags in CVS repository for file">
            <add-to-group group-id="CvsActions" anchor="after" relative-to-action="Cvs.CreateTag"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <checkinHandlerFactory implementation="org.cvstoolbox.multitag.MultiTagCheckinHandlerFactory"/>
    </extensions>
    <change-notes>
    <![CDATA[
    <ul>
      <li><b>1.01</b>
        <ol>
          <li>Fixed error in 'Multitag commited files' with empty directory.</li>
          <li>Fixed exception when invoked in "Create patch' context.</li>
        </ol>
      </li>
      <li><b>1.0</b>
        <ol>
          <li>Initial plugin release.</li>
          <li>'Create multiple tags' context action</li>
          <li>'Multitag commited files' after commit action</li>
        </ol>
      </li>
    </ul>
    ]]>
  </change-notes>
</idea-plugin>